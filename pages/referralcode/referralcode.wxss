.mask {
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .6);
  z-index: 9999;
  transition: all ease .6s;
}

.return-deposit {
  position: fixed;
  width: 92%;
  height: 700rpx;
  background-color: #7d7b77;
  z-index: 10000;
  border-radius: 20rpx;
  left: 0;
  right: 0;
  margin: 200rpx auto 0;
  transition: all ease-in-out .4s;
}

.img-wapper {
  width: 85%;
  height: 300rpx;
  margin: 0 auto 10rpx;
  font-size: 30rpx;
  color: #f6f6f6;
  padding-left: 40rpx;
  line-height: 54rpx;
}
.f11-zhu{
	font-size: 24rpx;
