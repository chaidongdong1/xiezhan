/* pages/goodsDetail/goodsDetail.wxss */


/* pages/productDetail/productDetail.wxss */

@import '../../wxParse/wxParse.wxss';
@import '../../styles/public.wxss';
.container {
  padding: 0;
}

.infos {
  background-color: #fff;
  padding: 15rpx;
  width: 100%;
  box-sizing: border-box;
}

.title {
  border-bottom: 1px solid #e2e2e2;
  line-height: 40rpx;
  padding: 0 8rpx 15rpx;
  margin-bottom: 15rpx;
}

.double-column {
  display: flex;
  padding: 0 8rpx;
}

.double-column view {
  flex: 1;
  line-height: 40rpx;
}

.double-column view text {
  padding-left: 20rpx;
}

.desc-t {
  padding: 0 8rpx;
}

.desc {
  text-indent: 2em;
  line-height: 36rpx;
  padding: 0 8rpx;
}

.details {
  width: 100%;
  margin-top: 15rpx;
}

.details image {
  display: block;
}

.details {
  background-color: #fff;
}

.d-title {
  background-color: #fff;
  text-align: left;
  vertical-align: middle;
  padding: 15rpx 15rpx 30rpx;
  box-sizing: border-box;
}

.d-title image {
  display: inline-block;
}

.d-title text {
  padding-left: 10rpx;
}

.recommend {
  margin: 15rpx 0;
  width: 100%;
}

.footer {
  width: 100%;
  height: 120rpx;
  position: fixed;
  /*background-image: linear-gradient(to bottom, rgba(26, 170, 220, 0.6), rgba(0, 0, 0, 0), rgba(0, 0, 0, 0));*/
  background-color: #fff;
  /*background-image: linear-gradient(to bottom,#fff,rgba(255,255,255,0.1));*/
  bottom: 0;
  left: 0;
  box-shadow: 0 0 20px rgba(0, 0, 0, .2);
}

.footer view {
  width: 260rpx;
  border-radius: 40rpx;
  margin: 20rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  float: right;
  box-shadow: 0 0 10px rgba(0, 0, 0, .1);
}

.footer .now-buy {
  background-color: #C28535;
}

.footer .add-trolley {
  height: 72rpx;
  line-height: 72rpx;
  background-color: rgba(194, 133, 53, .2);
  background-image: none;
  border: 4rpx solid #C28535;
  color: #C28535;
}

.trolley {
  position: fixed;
  bottom: 135rpx;
  right: 15rpx;
  overflow: inherit;
}

.notice {
  line-height: 40rpx;
  padding: 15rpx;
  text-align: justify;
}

.notice .f28 {
  padding-bottom: 15rpx;
}

.no-detail {
  padding: 0 15rpx 20rpx 15rpx;
}

.arc-btn-lg {
  background-image: none;
  background-color: #C28535;
}

.mask {
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .5);
  z-index: 999;
}

.pop {
  width: 100%;
  height: 600rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1000;
  display: flex;
  flex-direction: column;
}

.pop .top {
  flex: 1;
  background-color: #fff;
  position: relative;
}

.pop .bottom {
  height: 100rpx;
  background-color: #C28535;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  font-size: 28rpx;
}

.scroll-container {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.scroll-wapper .title {
  padding: 20rpx;
}

.scroll-wapper .choosed-box {
  padding: 0 20rpx;
}

.specifications {
  padding: 0 20rpx;
}

.specifications .txt {
  line-height: 40rpx;
  padding: 6rpx 0;
}

.specifications-box {
  padding: 0 0 0 20rpx;
}

.specifications-box view {
  padding: 5rpx 40rpx;
  font-size: 24rpx;
  color: #999;
  border: 1px solid #f0f0f0;
  display: inline-block;
  margin: 10rpx 10rpx 0 0;
  border-radius: 6rpx;
}

.specifications-box view.active {
  border-color: #C28535;
  background-color: #C28535;
  color: #fff;
}

.choosed-num {
  display: flex;
  align-items: center;
}

.choosed-num .num {
  width: 80rpx;
  text-align: center;
}

.choosed-num .plus,
.choosed-num .raduce {
  width: 50rpx;
  height: 50rpx;
  line-height: 42rpx;
  text-align: center;
  background-color: rgba(194, 133, 53, .2);
  color: #C28535;
}

.choosed-num .stock {
  flex:1;
  text-align: right;
}