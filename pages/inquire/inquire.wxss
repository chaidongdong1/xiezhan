/* pages/inquire/inquire.wxss */
.inque{
	width: 100%;
	height: auto;
	margin: 20px 0;
}
.inque-top{
	width: 100%;
	height: 60rpx;
	line-height: 60rpx;
	display: flex;
}
.inque-top-item{
	flex: 1;
	height: 60rpx;
	background: #ccc;
	color: #000;
	font-size: 26rpx;
	text-align: center;
	margin: 0 10px;
	border-radius: 5px;
}
.inque-top-active{
	color: #fff;
	background: #c99312;
}
.inque-liebiao{
	width: 100%;
	height: auto;
}
.inque-bottom{
	width: 100%;
	height: auto;
	margin-top: 30rpx;
	margin-bottom: 10rpx;
	background: #eee;
	border-radius: 15rpx;
	padding-bottom: 10px;
	box-shadow: 0 0 15rpx #ccc;
}
.inque-b-one{
	width: 100%;
	height: auto;
	display: flex;
	position: relative;
}
.inque-one-left image{
	width: 100%;
	height: auto;
}
.inque-one-left{
	flex: 0 30%;
	margin: 25rpx 3%;
}
.inque-one-right{
	flex: 60%;
	font-size: 24rpx;
	color: #333;
	margin-top: 25rpx;
	margin-left: 30rpx;
}
.inque-one-right view{
	padding-bottom: 5px;
}
.inque-b-wc{
	position: absolute;
	width: 150rpx;
	height: 120rpx;
	right: 10rpx;
	top: 30rpx;
}
.inque-b-wc image{
	width: 100%;
	height: 100%;
}
.inque-b-anniu{
	width: 90%;
	height: auto;
	display: flex;
	font-size: 26rpx;
	margin: 0 5%;
	justify-content: flex-end;
	padding-top: 15rpx;
}
.inque-b-anniu2{
	width: 180rpx;
	height: 60rpx;
	text-align: center;
	line-height: 60rpx;
	border-radius: 5px;
	margin-left: 30rpx;
	background: #E4D07D;
	color: #333;
}
.inque-b-anniu1{
	width: 180rpx;
	height: 60rpx;
	text-align: center;
	line-height: 60rpx;
	border-radius: 5px;
	margin-left: 30rpx;
	background: #bfbebe;
	color: #333;
}
.inque-b-anniu3{
	width: 180rpx;
	background: #c99312;
	color: #fff;
	height: 60rpx;
	text-align: center;
	margin-left: 30rpx;
	line-height: 60rpx;
	border-radius: 5px;
}
.inque-aa{
	background: #999;
	color: #eee;
	display: none;
}
.inque-bb{
	background: #c99312;
	color: #fff;
}
.inque-cc{
	background: #999;
	color: #eee;
}
.inque-one-right text{
	font-size: 28rpx;
	color: #C99312;
}
.in-my{
	width: 100%;
	height: 180rpx;
	line-height: 180rpx;
	font-size: 28rpx;
	color: #777;
	text-align: center;
	margin-top: 50rpx;
	background-color: #eee;
	box-shadow: 0 0 10rpx #ddd;
	border-radius: 15rpx;
}