/* pages/booking/booking.wxss */
.yyxd{
	width: 100%;
	height: auto;
	margin-top: 20rpx;
}
.yyxd-name{
	width: 100%;
	height: 60rpx;
	display: flex;
	line-height: 60rpx;
	margin-bottom: 20rpx;
}
.yyxd-name-item{
	width: 120rpx;
}
.yyxd-name-tb{
	flex: 8%;
}
.yyxd-name-tb image{
	width: 100%;
	height: auto;
}
.yyxd-name-wz{
	width: 27%;
	padding-left: 20rpx;
	font-size: 30rpx;
	color: #333;
	display: flex;
}
.yyxd-name-input{
	width: 65%;
	font-size: 28rpx;
	color: #333;
	background: #eee;
	overflow: hidden;
	border-radius: 10rpx;
	border:1px solid #ddd;
}
.yyxd-name-input input{
	background-color: #423834;
	height: 60rpx;
	line-height: 60rpx;
	border-radius: 5rpx;
	padding: 0 20rpx;
	font-size: 28rpx;
	color: #333;
	border:1px solid #ddd;
}
.yyxd-yy{
	border-bottom: 1px dashed #999;
	padding-bottom: 20rpx;
}
.yyxd-bottom{
	border-bottom:  1px dashed #999;
	padding-bottom: 30rpx;
}
.yyxd-name-input textarea{
	width: 90%;
	height: 200rpx;
	background-color: #eee;
	border-radius: 5rpx;
	font-size: 26rpx;
	line-height: 44rpx;
	color: #333;
	padding: 10rpx 10px;
	border-radius: 10rpx;
}
.yyxd-button{
	width: 100%;
	height: 80rpx;
	text-align: center;
	margin-top: 130rpx;
	margin: 40rpx 2.5%;
}
.yyxd-button button{
	width: 100%;
	height: 100%;
	color: #fff;
	font-size: 30rpx;
	background-color: #BB9847;
	line-height: 80rpx;
	border-radius: 5px;
	border:0;
}
.yyxd-name-wz view{
	flex: 1;
	flex-wrap: wrap;
  align-content: space-between;
}
.picker{
	padding-left: 20rpx;
}
.shou{
	width: 100%;
	height: auto;
	display: flex;
	border-bottom: 1px dashed #999;
	padding-bottom: 10rpx;
	margin-bottom: 20rpx;
}
.shou-image{
	width: 8%;
	height: auto;
	padding-top: 15rpx;
}
.shou-image image{
	width: 100%;
	height: 100%;
}
.shou-wz{
	flex: 1;
	font-size: 26rpx;
	color: #333;
	line-height: 46rpx;
	margin-left: 20rpx;
	padding:10rpx 0 10rpx 20rpx;
}
.shou-wz view {
	display: flex;
	justify-content: space-between;
}
.shou-wz view text{
	color: #BB9847;
}
.show-tb{
	width: 50rpx;
	margin-left: 25rpx;
	margin-top: 30rpx;
}