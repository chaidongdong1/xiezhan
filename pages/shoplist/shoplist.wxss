/* pages/shoplist/shoplist.wxss */
.list{
	width: 100%;
	height: auto;
	margin-top: 30rpx;
}
.list-one{
	width: 96%;
	height: auto;
	padding: 20rpx;
	background: #eee;
	border-radius: 15rpx;
	margin: 20rpx 2%;
	box-shadow: 0 0 10rpx #ccc;
}
.list-one view{
	font-size: 28rpx;
	color: #333;
	line-height: 48rpx;
	margin-top: 10rpx;
}
.list-button{
	width: 100%;
	height: auto;
	position: relative;
}
.list-button button{
	width: 210rpx;
	height: 70rpx;
	line-height: 70rpx;
	background: #e89300;
	font-size: 30rpx;
	color: #fff;
	position: absolute;
	bottom:0;
	right: 0;
}
.list-lb{
	width: 100%;
	height: 70rpx;
	line-height: 70rpx;
	margin: 20rpx 0;
	white-space: nowrap;
}
.list-lb-one{
	width: 25%;
	height: 100%;
	font-size: 30rpx;
	text-align: center;
	background: #D9D9D9;
	color: #333;
	border-radius: 20rpx;
	display: inline-block;
	margin-right: 4%;
	position: relative;
}
.list-lb-active{
	background: #C99312;
	color: #fff;
}
.list-sz{
	width: 48rpx;
	height: 48rpx;
	border-radius: 50%;
	background: #c60100;
	font-size: 22rpx;
	text-align: center;
	line-height: 48rpx;
	color: #fff;
	position: absolute;
	right: -15rpx;
	top: -15rpx;
}