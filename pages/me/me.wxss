/* pages/me/me.wxss */
.me{
	width: 100%;
	height: auto;
	margin-top: 40rpx;
}
.me-top{
	width: 100%;
	height: auto;
	display: flex;
}
.me-top-left{
	width: 180rpx;
	height: 180rpx;
	border-radius: 50%;
	overflow: hidden;
	border:2px solid #ccc;
}
.me-top-center{
	flex: 1;
	margin-left: 50rpx;
	font-size: 26rpx;
	color: #333;
	line-height: 48rpx;
	margin-top: 25rpx;
}
.me-top-center view:first-child{
	font-size: 30rpx;
}
.me-top-center view button{
	width: 100%; 
	height: 48rpx; 
	background: #030303;
	font-size: 28rpx;
	line-height: 48rpx;
	color: #ffebae;
	text-align: left;
	padding: 0;
}
.me-top-right{
	width: 100rpx;
	height: 100rpx;
	font-size: 24rpx;
	color: #666;
	text-align: center;
	margin-top: 20rpx;
	margin-right: 30rpx;
}
.me-top-right image{
	width: 100%;
	height: auto;
	margin-bottom: 10rpx;
}
.me-center{
	width: 100%;
	height: auto;
	background: #eee;
	margin: 30rpx 0;
	display: flex;
	border-radius: 15rpx;
	box-shadow: 0 0 15rpx #ccc;
}
.me-ce-item{
	flex: 1;
	font-size: 28rpx;
	color: #333;
	text-align: center;
	padding: 30rpx 0;
	position: relative;
}
.me-ce-hd{
	width: 18rpx;
	height: 18rpx;
	background-color: #f00;
	border-radius: 50%;
	position: absolute;
	top: 30rpx;
	right: 30rpx;
}
.me-ce-item image{
	width: 65rpx;
	height: 50rpx;
	text-align: center;
	margin-bottom: 20rpx;
}
.me-bottom{
	width: 100%;
	height: auto;
	margin-top: 10rpx;
}
.me-b1{
	width: 95%;
	height: 80rpx;
	line-height: 80rpx;
	background: #eee;
	margin-bottom: 25rpx;
	padding: 0 20rpx;
	border-radius: 10rpx;
	position: relative;
	box-shadow: 0 0 15rpx #ccc;
}
.me-b1 text{
	font-size: 30rpx;
	color: #333;
	height: 40rpx;
	line-height: 80rpx;
	margin-left: 80rpx;
}
.me-b1 image{
	width: 55rpx;
	height: 42rpx;
	position: absolute;
	top: 15rpx;
}
