/* pages/preferential/preferential.wxss */
@import '../../wxParse/wxParse.wxss';
.pack{
	width: 100%;
	height: auto;
	margin-top: 20px;
}
.pack-one{
	width: 100%;
	height: auto;
	position: relative;
	display: flex;
	margin-bottom: 40rpx;
}
.pack-one-left{
	flex: 1;
	background: #B97D1C;
	border-top-left-radius:20rpx; 
	border-bottom-left-radius:20rpx; 
}
.pack-one-top{
	font-size: 38rpx;
	color: #fff;
	text-align: center;
	margin-top: 20rpx;
	font-weight: bold;
}
.pack-one-center{
	font-size: 32rpx;
	color: #B97D1C;
	text-align: center;
	margin: 15rpx 25rpx;
	background: #fff;
	border-radius: 30rpx;
	padding: 10rpx 20rpx;
	overflow: hidden;
}
.pack-one-bottom{
	font-size: 24rpx;
	color: #eee;
	text-align: center;
	margin: 15rpx 0; 
}
.pack-tj{
	width: 120rpx;
	height: 120rpx;
	position: absolute;
	top: 0;
	left: 0;
}
.pack-tj image{
	width: 100%;
	height: 100%;
	border-top-left-radius:20rpx; 
}
.pack-one-right{
	width: 150rpx;
	background: #9B6610;
	border-top-right-radius:20rpx;
	border-bottom-right-radius:20rpx;
}
.pack-one-right view:first-child{
	margin-top: 40rpx;
}
.pack-one-right view{
	font-size:40rpx;
	text-align: center;
	color: #ffe12f;
	line-height: 50rpx;
}
.pack-one-right image{
	width: 36rpx;
	height: 36rpx;
	margin-left: 55rpx;
}