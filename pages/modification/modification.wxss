/* pages/modification/modification.wxss */
.mod{
	width: 100%;
	height: auto;
}
.mod-input{
	width: 100%;
	height: 100rpx;
	line-height: 100rpx;
	border-bottom: 1px solid #ccc;
}
.mod-input input{
	font-size: 30rpx;
	color: #333;
	height: 80rpx;
	line-height: 80rpx;
	padding: 0 20rpx;
	margin-top: 10rpx;
}
.mod-yzm{
	position: relative;
}
.mod-yzm input{
	padding-right: 240rpx;
}
.mod-yzm button{
	position: absolute;
	top: 20rpx;
	right: 10rpx;
	z-index: 2;
	width: 200rpx;
	height: 60rpx;
	line-height: 60rpx;
	background: #C99312;
	color: #fff;
	font-size: 26rpx;
	border-radius: 25rpx;
}
.mod-button{
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	margin-top: 40rpx;
}
.mod-button button{
	width: 100%;
	height: 100%;
	text-align: center;
	font-size: 30rpx;
	background: #C99312;
	color: #fff;
	border-radius: 30rpx;
}