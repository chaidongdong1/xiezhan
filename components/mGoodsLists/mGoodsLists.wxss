}


/*通用底部*/

.public-footer {
  height: 100rpx;
  line-height: 100rpx;
  color: #999;
  font-size: 26rpx;
  position: relative;
}

.public-footer text {
  display: inline-block;
  width: 160rpx;
  height: 1px;
  background-color: #999;
  vertical-align: middle;
}

.public-footer text:first-child {
  margin-right: 20rpx;
}

.public-footer text:last-child {
  margin-left: 20rpx;
}