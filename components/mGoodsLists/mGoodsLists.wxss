/*466ede*/

.main-bg {
  background-color: #1aaade;
  color: #fff;
}

.main-bgi {
  background-image: linear-gradient(to right, #1aaade, #2e8fde);
}

.main-color {
  color: #1aaade;
}

.red-bg {
  background-color: #e8380d;
  color: #fff;
}

.red-color {
  color: #e8380d;
}

.box-shadow {
  box-shadow: 0 2px 8px #999;
  border-radius: 2px;
}

.btn {
  width: 180rpx;
  height: 52rpx;
  padding: 15rpx 40rpx;
  text-align: center;
  display: flex;
  line-height: 52rpx;
  box-shadow: 0 2px 8px #999;
  border-radius: 2px;
  background-image: linear-gradient(to right, #1aaade, #2e8fde);
}

.btn text {
  padding-left: 12rpx;
}

.btn image {
  margin-top: 5rpx;
}

.btn-hover {
  background-color: #0996c9;
}

.main {
  width: 100%;
  box-sizing: border-box;
  padding: 0 15rpx;
}

.placeholder-box100 {
  height: 100rpx;
}

.placeholder-box120 {
  height: 120rpx;
}

.pointer {
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background-color: #e8380d;
}

.pointer-gray {
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background-color: #999;
}

/*瀑布流*/

.pro-list-box {
  width: 100%;
  padding: 0 15rpx;
  box-sizing: border-box;
  column-count: 2;
  column-gap: 15rpx;
  font-size: 0;
}

.pro-list-box .pro-item {
  overflow: hidden;
  border-radius: 4rpx;
  background-color: #fff;
  margin-bottom: 15rpx;
  padding-bottom: 15rpx;
  transition: all .4s ease-in-out;
  width: 100%;
  display: inline-block;
}

.pro-list-box .pro-item image {
  width: 100%;
}

.pro-list-box .pro-title {
  margin: 12rpx 0 8rpx;
}

.pro-list-box .info {
  width: 100%;
  padding: 0 15rpx;
  box-sizing: border-box;
}

.pro-list-box .info>view {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}


